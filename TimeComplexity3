// you can also use imports, for example:
 import java.util.*;

// you can write to stdout for debugging purposes, e.g.
// System.out.println("this is a debug message");

class Solution {
    public int solution(int[] A) {
        // write your code in Java SE 8

        int N = A.length-1;
        int equilibrium = A[0]-A[N]; 
        for (int i = 1, n = N-1; i <= n;) 
        { 
            if(equilibrium >= 0)
            {
                equilibrium -= A[n];
                --n; 
            }
            else
            {
                equilibrium +=A[i];
                ++i;
            }
        }
        return equilibrium<0?equilibrium*(-1):equilibrium;
    }
}
